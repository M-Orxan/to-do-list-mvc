
@{
    ViewData["Title"] = "Index";
}

@model List<UserVM>
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="homepage-content" style="text-align: center; padding: 50px;">
    <h1>Welcome to Users List</h1>
    <br />

    <!-- Filter and Search Section -->
    <div style="max-width: 600px; margin: 0 auto;">
        <form method="get" asp-action="Filter" class="mb-3">
            <div class="form-row align-items-center">
                <div class="col-auto">
                    <label for="search">Search:</label>
                    <input type="text" id="search" name="search" class="form-control" placeholder="Search by title...">
                </div>
               
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mt-4">Filter</button>
                </div>
                <div class="col-auto">
                    <a asp-action="Index" class="btn btn-info mt-4">Reset</a>
                </div>
            </div>
        </form>

        
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">FirstName</th>
                    <th scope="col">LastName</th>
                    <th scope="col">Username</th>
                    <th scope="col">Registration Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var toDo in Model)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@toDo.FirstName</td>
                        <td>@toDo.LastName</td>
                        <td>@toDo.Username</td>
                        <td>@toDo.RegisterDate</td>
                      
                       
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

