
@{
    ViewData["Title"] = "ForgotPassword";
    
}

@model ForgotPasswordVM
<div class="homepage-content" style="text-align: center; padding: 50px;">
    <p></p>
    <h2>Forgot Password</h2>

    @{
        if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
    }

    <div style="max-width: 600px; margin: 0 auto;">

        <form asp-controller="Accounts" asp-action="ForgotPassword" method="post">
            
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="@Model.Email" placeholder="enter your email" style="width: 100%; padding: 8px; margin-top: 5px" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>


            <button type="submit" style="padding: 10px 20px; margin-top: 5px; background-color: #007bff; color: white; border: none; border-radius: 5px;">Submit</button>
        </form>

    </div>

    <a class="btn btn-info mb-1" style="margin-top:5px" asp-action="Index" asp-controller="ToDos">Go back</a>
</div>


