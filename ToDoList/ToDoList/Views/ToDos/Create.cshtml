@model CreateToDoVM
@{
    ViewData["Title"] = "Create";
}

<div class="homepage-content" style="text-align: center; padding: 50px;">
    <h1>Add new To Do</h1>


    <div style="max-width: 600px; margin: 0 auto;">

        <form asp-controller="ToDos" asp-action="Create" method="post">
            <div class="form-group">
                <div class="input-group">
                    <input asp-for="Title" placeholder="title" type="text" style="width: 100%; padding: 8px; margin-top: 5px" />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>

            <div class="form-group">
            <div class="input-group">
                <textarea placeholder="description" asp-for="Description" class="form-control" rows="8"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>

            </div>
            </div>
                <div class="form-group">
            <div class="input-group">
                <input asp-for="Deadline" type="date" style="width: 100%; padding: 8px; margin-top: 5px" />
                <span class="text-danger" asp-validation-for="Deadline"></span>
            </div>

            </div>
            <button type="submit" style="padding: 10px 20px; margin-top: 5px; background-color: #007bff; color: white; border: none; border-radius: 5px;">Submit</button>
        </form>

    </div>

    <a class="btn btn-info mb-1" style="margin-top:5px" asp-action="Index" asp-controller="ToDos">Go back</a>
</div>

