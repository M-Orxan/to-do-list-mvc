@model DetailToDoVM
@{
    ViewData["Title"] = "Detail";
}
@{
    string status = "";
    @if (Model.IsCompleted)
    {
        status = "Completed";


    }
    else
    {
        status = "Pending";
    }
}

<div class="homepage-content" style="text-align: center; padding: 50px;">
   


    <div style="max-width: 600px; margin: 0 auto;">



        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea readonly asp-for="Description" class="form-control" rows="8"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" type="date" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Deadline" class="control-label"></label>
            <input asp-for="Deadline" type="date" class="form-control" readonly />
        </div>


        <div class="form-group">
            <span>Status : @status</span>

        </div>

    </div>



    <a class="btn btn-primary " asp-action="Update" asp-controller="ToDos" asp-route-id="@Model.Id">Update this to do</a>

    <br />
    <a class="btn btn-info mb-1" style="margin-top:10px" asp-action="Index" asp-controller="ToDos">Go back</a>

</div>







