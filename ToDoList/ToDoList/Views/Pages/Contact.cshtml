@model ContactFormVM
@{
    ViewData["Title"] = "Contact";
}


<div class="contact-page" style="max-width: 800px; margin: 0 auto; padding: 20px;">
    <h2 style="text-align: center;">Contact Us</h2>
    <p style="text-align: center;">We’d love to hear from you! Whether you have questions, feedback, or suggestions, feel free to reach out. Our team is here to help you make the most of [Website Name].</p>

    <div style="display: flex; gap: 40px; margin-top: 20px;">
        <!-- Contact Form -->
        <div style="flex: 9;">
            <form asp-controller="Pages" asp-action="SendMessage" method="post">

                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" asp-for="Name" style="width: 100%; padding: 8px;  " />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input asp-for="Email" style="width: 100%; padding: 8px;  " />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input asp-for="Subject" style="width: 100%; padding: 8px;" />
                    <span class="text-danger" asp-validation-for="Subject"></span>

                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea rows="5" asp-for="Message" style="width: 100%; padding: 8px;"></textarea>
                    <span class="text-danger" asp-validation-for="Message"></span>
                </div>
                <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 5px;">Send Message</button>
            </form>

            @if (TempData["MessageStatus"] != null)
            {
                <div class="alert alert-info">
                    @TempData["MessageStatus"]
                </div>
            }

           
        </div>

        <!-- Contact Information -->
        <div style="flex: 6;">
            <h3>Contact Information</h3>
            <p>Email: <a href="mailto:support@website.com">support@website.com</a></p>


        </div>
    </div>
</div>

